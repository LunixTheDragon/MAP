            </HBox>
        </VBox>
    </top>

    <center>
        <VBox styleClass="glass-panel" style="-fx-padding: 20;">
            <BorderPane.margin>
                <Insets bottom="20.0" />
            </BorderPane.margin>
            <TextArea fx:id="chatArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" styleClass="modern-chat-area" />
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10" styleClass="glass-panel" style="-fx-padding: 18;">
