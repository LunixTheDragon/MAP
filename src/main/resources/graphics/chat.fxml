                <VBox alignment="CENTER_LEFT">
                    <Label styleClass="dynamic-text" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="P콏ipojen jako" />
                    <Label fx:id="currentUserLabel" style="-fx-font-weight: bold; -fx-text-fill: #007AFF; -fx-font-size: 18px;" text="User" />
