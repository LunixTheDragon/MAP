<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="main-container" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphics.ChatController">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="glass-panel" style="-fx-padding: 15;">
            <BorderPane.margin>
                <Insets bottom="15.0" />
            </BorderPane.margin>
            <Label style="-fx-font-weight: bold; -fx-text-fill: #64748b; -fx-font-size: 14px;" text="Připojen jako:" />
            <Label fx:id="currentUserLabel" style="-fx-font-weight: bold; -fx-text-fill: #2b5278; -fx-font-size: 16px;" text="User" />
        </HBox>
    </top>

    <center>
        <VBox styleClass="glass-panel" style="-fx-padding: 15;">
            <BorderPane.margin>
                <Insets bottom="15.0" />
            </BorderPane.margin>
            <TextArea fx:id="chatArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" styleClass="glass-chat-area" />
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER" styleClass="glass-panel" style="-fx-padding: 15;">
            <TextField fx:id="targetUserField" promptText="Příjemce..." prefWidth="120" styleClass="input-field" />
            <TextField fx:id="messageField" promptText="Napiš zprávu..." HBox.hgrow="ALWAYS" styleClass="input-field" onAction="#handleSendMessage" />
            <Button onAction="#handleSendMessage" styleClass="primary-btn" text="Odeslat" />
        </HBox>
    </bottom>

</BorderPane>