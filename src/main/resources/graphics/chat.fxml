<BorderPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphics.ChatController">

    <padding>
        <Insets top="15" right="25" bottom="25" left="25"/>
    </padding>

    <top>
        <VBox spacing="15">
            <BorderPane.margin>
                <Insets bottom="20.0" />
            </BorderPane.margin>

            <MenuBar styleClass="apple-menu-bar">
                <Menu text="丘뙖잺 Nastaven칤">
