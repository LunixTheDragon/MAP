<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="main-container" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="graphics.ChatController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: rgba(255,255,255,0.9); -fx-padding: 10 20 10 20;">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #4f46e5; -fx-font-size: 16px;" text="Připojen jako:" />
            <Label fx:id="currentUserLabel" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="User" />
        </HBox>
    </top>

    <center>
        <VBox style="-fx-padding: 20;">
            <TextArea fx:id="chatArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"
                      style="-fx-control-inner-background: white; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 14px;" />
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" style="-fx-padding: 0 20 20 20;">
            <TextField fx:id="targetUserField" promptText="Komu..." prefWidth="100" styleClass="input-field" />
            <TextField fx:id="messageField" promptText="Napiš zprávu..." HBox.hgrow="ALWAYS" styleClass="input-field" onAction="#handleSendMessage" />
            <Button onAction="#handleSendMessage" styleClass="primary-btn" text="Odeslat" />
        </HBox>
    </bottom>

</BorderPane>